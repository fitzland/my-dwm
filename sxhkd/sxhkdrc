#################################################################
# SUPER + FUNCTION KEYS
#################################################################

# Atom
super + F1
	atom

# Code
super + F2
	code

#Inkscape
super + F3
    inkscape

#Gimp
super + F4
    gimp

#Meld
super + F5
    meld

#GnuCash
super + F6
    gnucash

#KeePassXC
super + F7
    keepassxc

#Spotify
super + F8
    com.spotify.Client

#Typora
super + F9
    typora

#Firefox
super + F10
    firefox-developer-edition

#Firefox
super + shift + F10
    firefox-developer-edition --private-window

#Microsoft Edge
super + F11
    microsoft-edge-beta --profile-directory='Default'

#Microsoft Edge
super + shift + F11
    microsoft-edge-beta --profile-directory='Profile 1'

#Chrome Primary
super + F12
    google-chrome-stable --profile-directory='Default'

#Chrome Secondary
super + shift F12
    google-chrome-stable --profile-directory='Profile 1'

#################################################################
# SUPER + ... KEYS
#################################################################

# Terminal
super + Return
    rofi-sensible-terminal

# program launcher
super + slash
	rofi -modi drun -show drun -line-padding 4 \
                -columns 2 -padding 20 -hide-scrollbar -terminal XTerm \
                -show-icons -drun-icon-theme "Paper" -font "Droid Sans Regular 10"

# program launcher
super + backslash
	rofi -modi run -show run -line-padding 4 \
                -columns 2 -padding 20 -hide-scrollbar -terminal rofi-sensible-terminal \
                -show-icons -run-icon-theme "Papirus" -font "Source Sans Pro Regular 11"

# show open window
super + ctrl + d
	rofi -modi drun -show window -line-padding 4 \
                -columns 2 -padding 20 -hide-scrollbar -terminal XTerm \
                -show-icons -drun-icon-theme "Paper" -font "Droid Sans Regular 10"

# show ssh sesssions
super + shift + slash
	rofi -modi drun -show ssh -line-padding 4 \
                -columns 2 -padding 20 -hide-scrollbar -terminal XTerm \
                -show-icons -drun-icon-theme "Paper" -font "Droid Sans Regular 10"

# power-menu
super + shift + e
     ~/.config/rofi/powermenu.sh

#arcolinux-logout
super + x
    arcolinux-logout

#Rofi theme selector
super + r
    rofi-theme-selector

#Urxvt
#super + t
#    urxvt

#Pavucontrol
super + v
    pavucontrol

#Pragha
#super + m
#    pragha

#urxvt
super + Return
    urxvt

#Xkill
super + Escape
    xkill


#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + shift + Return
	thunar

#dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd


